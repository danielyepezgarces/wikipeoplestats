RewriteEngine On
RewriteBase /

# Redirigir wikipeoplestats.org a www.wikipeoplestats.org
RewriteCond %{HTTP_HOST} ^wikipeoplestats\.org$ [NC]
RewriteRule ^(.*)$ https://www.wikipeoplestats.org/$1 [R=301,L]

# Cache Rules
<IfModule mod_headers.c>
    # Cache images for 1 year
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|webp|svg)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Cache JSON files in the 'languages' folder for 1 week
    <FilesMatch "^languages/.*\.json$">
        Header set Cache-Control "public, max-age=604800, must-revalidate"
    </FilesMatch>

    # Cache CSS and JavaScript for 1 week
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=604800, must-revalidate"
    </FilesMatch>

    # Cache fonts for 1 month
    <FilesMatch "\.(woff|woff2|ttf|eot|otf)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
</IfModule>

<IfModule mod_rewrite.c>
    # Reescritura de rutas del dominio principal
    RewriteRule ^search/genders/?$ /searchgenders.php [L,QSA]
    RewriteRule ^search/users/?$ /searchusers.php [L,QSA]
    RewriteRule ^users/([a-zA-Z0-9_-]+)/?([0-9]{4}-[0-9]{2}-[0-9]{2})?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?$ /users.php?username=$1&start_date=$2&end_date=$3 [L,QSA]
    RewriteRule ^genders/?$ /searchgenders.php [L,QSA]
    RewriteRule ^genders/([a-zA-Z0-9_.-]+)/?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?$ /genders.php?project=$1&start_date=$2&end_date=$3 [L,QSA]
    RewriteRule ^users/([a-zA-Z0-9_.-]+)/([a-zA-Z0-9_-]+)/?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?$ /users.php?project=$1&username=$2&start_date=$3&end_date=$4 [L,QSA]

    RewriteRule ^groups/([a-zA-Z0-9_.-]+)/([a-zA-Z0-9_-]+)/?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?$ /groups.php?project=$1&username=$2&start_date=$3&end_date=$4 [L,QSA]

    RewriteRule ^rankings/wikis$ rankingswiki.php [L]

    RewriteRule ^compare/wiki/([a-zA-Z0-9_.-]+)/?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?/?([0-9]{4}-[0-9]{2}-[0-9]{2})?$ /comparewiki.php?project=$1&start_date=$2&end_date=$3 [L,QSA]

    # Reglas específicas del subdominio API
    RewriteCond %{HTTP_HOST} ^api\.wikipeoplestats\.org$ [NC]
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ https://wikipeoplestats.org/ [R=301,L]

    # Excluir la raíz para no afectar otros endpoints del API
    RewriteCond %{HTTP_HOST} ^api\.wikipeoplestats\.org$ [NC]
    RewriteCond %{REQUEST_URI} !^/$
    RewriteRule ^v1/stats/([a-zA-Z0-9_-]+)$ /api/stats.php?project=$1 [L,QSA]
    RewriteRule ^v1/genders/graph/([a-zA-Z0-9_.-]+)(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?$ /api/genders/graph.php?project=$1&start_date=$2&end_date=$3 [L,QSA]
    RewriteRule ^v1/genders/stats/([a-zA-Z0-9_.-]+)(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?$ /api/genders/stats.php?project=$1&start_date=$2&end_date=$3 [L,QSA]
    RewriteRule ^v1/users/stats/([a-zA-Z0-9_.-]+)/([a-zA-Z0-9_-]+)(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?$ /api/users/stats.php?project=$1&username=$2&start_date=$3&end_date=$4 [L,QSA]
    RewriteRule ^v1/users/graph/([a-zA-Z0-9_.-]+)/([a-zA-Z0-9_-]+)(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?(?:/([0-9]{4}-[0-9]{2}-[0-9]{2}))?$ /api/users/graph.php?project=$1&username=$2&start_date=$3&end_date=$4 [L,QSA]
</IfModule>

# Deny access to sensitive files
<Files "config.php">
    Redirect 404 /config.php
</Files>

